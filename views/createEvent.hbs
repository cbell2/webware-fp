        </form>
    </div>




</div>

  <script>
      $('#form1').submit(function() {
          if(
              !$('#name').val() ||
              !$('#time').val() ||
              !$('#desc').val() ||
              !$('#location').val() ||
              !$('#capacity').val()
          )
          alert("IF YOU DON'T ENTER ALL THE FIELDS IM GOING TO GET REAL MAD");
          return true;
      })
  </script>

    

